        <Button x:Name="perfomance" Content="Performance" HorizontalAlignment="Left" Margin="68,281,0,0" VerticalAlignment="Top" Width="75" Click="perfomance_Click"/>
        <Button x:Name="mergesortButton" Content="Merge Sort" HorizontalAlignment="Left" Margin="68,237,0,0" VerticalAlignment="Top" Width="75" Click="mergesortButton_Click"/>
        <TextBox x:Name="outputText" HorizontalAlignment="Left" Height="607" Margin="185,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="1007"/>

    </Grid>
</Window>
